{
	"compileOnSave": false,
	"compilerOptions": {
		"strict": false,
		"outDir": "./dist/", // 打包到的目录
		"sourceMap": true, // 是否生成sourceMap（用于浏览器调试）
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"noUnusedParameters": true,
		"moduleResolution": "node",
		"module": "esnext",
		"target": "es5", // 转化成的目标语言
		"baseUrl": "./",
		"types": ["node"],
		"typeRoots": ["./node_modules/@types"],
		"lib": ["dom", "es2015"],
		"jsx": "react",
		"allowJs": false
	},
	"include": ["packages/**/*.ts"], // 要打包的文件
	"exclude": ["node_modules", "*.test.ts"]
}
